%% SURGE PID MODEL PLOTS

subplot(5,1,1)
plot(surge1)
title('No Controller')
xlabel('Time [s]')
ylabel('Velocity [m/s]')
grid on
legend('Kp=0 Ki=0 Kd=0','location','nw')

subplot(5,1,2)
plot(surge2)
hold on
plot(surge21)
plot(surge22)
title('Proportional Controller')
xlabel('Time [s]')
ylabel('Velocity [m/s]')
grid on
legend('Kp=1','Kp=10','Kp=0.1','location','nw')

subplot(5,1,3)
plot(surge3)
hold on
plot(surge31)
